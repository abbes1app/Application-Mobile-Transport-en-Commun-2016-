<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.getgpslocation.fragment.Ligne2Hor">
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/main_conten"
    android:layout_height="wrap_content">

</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGNE/DIRECTION"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#000000" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:id="@+id/Radiogr1">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cascade2"
            android:id="@+id/Cascade2"
            android:checked="true"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cite 20 Aout"
            android:id="@+id/aout2"
            android:layout_marginTop="5dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATION"
        android:id="@+id/abbes21"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Sligne2"
        android:choiceMode="singleChoice"
        android:layout_gravity="start">

    </ListView>

</LinearLayout>
